<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="/stylesheets/projects.css">
    <title><%= title %></title>
</head>
<body>
    <header>
        <%- include('partials/top_navbar') %>
    </header>



    <section class="hero">
        <div class="hero-content">
            <h1><%= title %></h1>
            <ul>
                <% projects.forEach(project => { %>
                    <li class="project_li">
                        <h2><%= project.title %></h2>
                        <a href="<%= project.link %>" target="_blank" class="link"> <!-- Open link in a new tab -->
                        <img src="<%= project.image %>" alt="<%= project.title %> Image" class="project-image">
                        <p><%= project.description %></p>
                    </li>
                <% }); %>
            </ul>
            <br>
        </div>
    </section>


    <footer>
        <%- include('partials/footer_navbar') %>
    </footer>
</body>
</html>
